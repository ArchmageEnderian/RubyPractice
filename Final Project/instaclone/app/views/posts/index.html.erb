<h1>Posts#index</h1>

<div class="container mt-5">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="post-preview">
          <%= link_to (image_tag(url_for(post.image), class: 'img-fluid') if post.image.attached?), post_path(post) %>
          <div class="post-info">
            <strong><%= post.user.username %></strong>
            <p><%= truncate(post.description, length: 50) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

