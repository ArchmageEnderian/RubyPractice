<h2>Поиск пользователей</h2>

<%= form_tag searchPage_users_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Поиск", name: nil %>
<% end %>

<% if @users %>
  <% if @users.any? %>
    <ul>
      <% @users.each do |user| %>
        <li><%= link_to user.username, user_path(user) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>Пользователи не найдены</p>
  <% end %>
<% end %>
