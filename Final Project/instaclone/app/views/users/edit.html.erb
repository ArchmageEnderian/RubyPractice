<h1>Редактировать профиль</h1>

<%= form_for @user do |f| %>

  <%= render 'shared/form_errors', object: @user %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "Телефон" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :gender, "Пол" %>
    <%= f.select :gender, options_for_select(['Мужской', 'Женский'], @user.gender) %>
  </div>

  <div class="field">
    <%= f.label :private_account, "Приватный профиль" %>
    <%= f.check_box :private_account %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить профиль" %>
  </div>
<% end %>

<%= link_to 'Отмена', user_path(@user) %>
